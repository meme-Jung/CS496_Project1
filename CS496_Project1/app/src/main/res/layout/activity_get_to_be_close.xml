<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/gtbcScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="/"/>

        <TextView
            android:id="@+id/gtbcTotalScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:text="20"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/gtbc_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TableRow>
            <Button
                android:id="@+id/gtbc_button_0"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:text="button_0"
                android:onClick="checkRightAnswer" />

            <Button
                android:id="@+id/gtbc_button_1"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:text="button_1"
                android:onClick="checkRightAnswer" />

            <Button
                android:id="@+id/gtbc_button_2"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:text="button_2"
                android:onClick="checkRightAnswer" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/gtbc_button_3"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:text="button_3"
                android:onClick="checkRightAnswer" />

            <Button
                android:id="@+id/gtbc_button_4"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:text="button_4"
                android:onClick="checkRightAnswer" />

            <Button
                android:id="@+id/gtbc_button_5"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_weight="1"
                android:text="button_5"
                android:onClick="checkRightAnswer" />

        </TableRow>

    </TableLayout>


</LinearLayout>
